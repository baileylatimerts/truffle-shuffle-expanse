{% comment %}
Value Props Section
{% endcomment %}
<style>
  .value-props h4 {
    text-transform: none;
    font-size: 20px;
  }
</style>

<div class="mx-auto px-4 flex justify-center items-center py-16 border-top border-bottom value-props">
  <div class="flex flex-col lg:flex-row" style="max-width: 800px">
    {% for block in section.blocks %}
      <div class="text-center lg:w-1/3">
        <img src="{{ block.settings.image | img_url: 'master' }}" alt="{{ block.settings.image.alt }}">
        <h4 class=" mb-2">{{ block.settings.heading }}</h4>
        <p>{{ block.settings.text }}</p>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
  {
    "name": "Value Props Section",
    "blocks": [
      {
        "type": "value_prop",
        "name": "Value Prop",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          }, {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "Heading Text"
          }, {
            "type": "textarea",
            "id": "text",
            "label": "Text",
            "default": "Some descriptive text."
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Value Props Section",
        "category": "Custom"
      }
    ]
  }
{% endschema %}