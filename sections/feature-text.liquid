<div class="flex flex-col md:flex-row py-8 px-8 lg:px-24">
  <div class="md:w-1/2">
    <h2 class="text-3xl font-bold  ">{{ section.settings.title }}</h2>
  </div>
  <div class="md:w-1/2 md:ml-4">
    <p class="text-gray-700 text-lg leading-7">{{ section.settings.description }}</p>
  </div>
</div>

{% schema %}
  {
    "name": "Feature Text",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      }, {
        "type": "textarea",
        "id": "description",
        "label": "Description"
      }
    ],
    "presets": [
      {
        "name": "Feature Text",
        "category": "Content"
      }
    ]
  }
{% endschema %}