{% comment %}
Features Section
{% endcomment %}
<div class="container mx-auto px-4 py-16">
  <p class="uppercase text-sm text-center">{{ section.settings.overline }}</p>
  <h2 class="text-center mb-8">{{ section.settings.title }}</h2>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    {% for block in section.blocks %}
      <div class="border rounded-lg p-4">
        <h4 class="font-bold mb-2">{{ block.settings.heading }}</h4>
        <p>{{ block.settings.text }}</p>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
  {
    "name": "Features Section",
    "settings": [
      {
        "type": "text",
        "id": "overline",
        "label": "Overline",
        "default": "Overline"
      }, {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "Feature Heading"
      }
    ],
    "blocks": [
      {
        "type": "feature",
        "name": "Feature",
        "settings": [
          {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "Feature Heading"
          }, {
            "type": "textarea",
            "id": "text",
            "label": "Text",
            "default": "Feature description."
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Features Section",
        "category": "Custom"
      }
    ]
  }
{% endschema %}