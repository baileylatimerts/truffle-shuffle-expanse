<div class="flex flex-col md:flex-row">
  <div class="w-full md:w-1/2 bg-white flex flex-col items-center justify-center p-8 lg:p-24">
    <h1 class="text-3xl font-bold mb-6 text-center">{{ section.settings.column_1_title }}</h1>

    <script
      charset="utf-8"
      type="text/javascript"
      src="//js.hsforms.net/forms/embed/v2.js"></script>
    <script>
      hbspt.forms.create({region: "na1", portalId: "8527712", formId: "d3e70d40-40b9-409d-816f-d7958cccf1d8"});
    </script>
    <p class="mt-4">
      {{ section.settings.column_1_question }}
      <a
        href="{{ section.settings.hubspot_meeting_link }}"
        target="_blank"
        rel="noopener noreferrer"
        class="underline">Book a call</a>
    </p>
  </div>

  <div class="w-full md:w-1/2 relative" style="min-height: 500px">
    <video class="absolute inset-0 w-full h-full object-cover" controls>
      <source src="{{ section.settings.column_2_video_url }}" type="video/mp4">
    </video>
  </div>
</div>

{% schema %}
  {
    "name": "StartEngine Hero",
    "settings": [
      {
        "type": "text",
        "id": "column_1_title",
        "label": "Column 1 Title",
        "default": "Sign up for our newsletter"
      }, {
        "type": "text",
        "id": "column_1_question",
        "label": "Column 1 Question",
        "default": "Have questions?"
      }, {
        "type": "text",
        "id": "hubspot_meeting_link",
        "label": "Hubspot Meeting Link",
        "default": "https://meetings.hubspot.com/tyler-vorce"
      }, {
        "type": "text",
        "id": "column_2_video_url",
        "label": "Column 2 Video URL"
      }
    ],
    "presets": [
      {
        "name": "StartEngine Hero"
      }
    ]
  }
{% endschema %}