{%if customer.tags contains 'Active Subscriber' or 'rc-member-lifetime-membership-active'%}


<!-- Bold: Memberships (page) -->
{%comment%}
{% include 'bold_mem_helper' with 'page' %}
{%endcomment%}
<!-- end Bold code -->




{% comment %}
{% section 'plus-landing-hero-section' %}
{% section 'plus-landing-menu' %}
{% endcomment %}

<div class="flex-row-outer-page">

  <div class="flex-col-outer-page-1">
    {% section 'plus-landing-menu-vertical' %}
  </div>

  <div class="flex-col-outer-page-2">

    <div class="calendar-wrapper-plus-landing">

      <div class="container-large">

        <div class="calendar-section-heading-wrapper-home">
          <h3 class="section-heading-plus">YOUR UPCOMING CLASSES</h3>
        </div>
        <div class="calendar-inner-home">
       
            {% for order in customer.orders %}
                {% for line_item in order.line_items %}
                    {% if line_item.product.type == 'Cook Along Experience' %}
                      {% assign page_url = line_item.product.metafields.on_demand.page_url %}
                      {% if page_url == blank %}
                        {% assign page_url = '#' %}
                      {% endif %}
                      {% render 'sk-product-loop', product: line_item.product, hide_product_form: true, hide_price: true, custom_url: page_url, custom_review: true, on_demand_btn: true %}
                    {% endif %}
                {% endfor %}
              {% endfor %}


        </div>

      </div> <!-- container-large -->

    </div> <!-- alendar-wrapper-plus-landing -->
 
  </div> <!-- flex-col-outer-page-2 -->
  
</div> <!-- flex-row-outer-page -->



<style type="text/css">
  #event-calendar-app button.subcribe-to-calendar__inverse[type="button"] {
    color: #ffffff !important;
  }

  #event-calendar-app .eca-calendar .fc-view-container span.fc-day-number {
    color: #000000 !important;
  }

</style>

{%else%}

<div class="container-large margin-top">


  <div class="calendar-section-heading-wrapper-home">
    <h3 class="section-heading-plus">Sorry, this page is for members only</h3>
    <p class="extra-margin-b">This page can only be accessed if you have a current Truffle Shuffle VIP Membership.</p>
  </div>


  <div class="two-btn-wrapper">
    <div class="hero-col-btn-wrapper-account-plus">
      <a href="https://www.truffleshufflesf.com/pages/truffle-shuffle-subscriptions" class="btn-main-plus w-button">ABOUT THE MEMBERSHIP</a>
      <a href="https://www.truffleshufflesf.com/account/login" class="btn-main-plus fixed-width w-button">Login</a>
    </div>
  </div>


  {%- comment -%}

  <div class="calendar-section-heading-wrapper-home">
    <h3 class="section-heading-plus">Are you an existing member?</h3>
    <p class="extra-margin-b">Click the button below to set up your VIP Box Subscription. Make sure to check your email to get your onboarding code that is required in order to set up your subscription.</p>
    <div class="hero-col-btn-wrapper-account-plus">
      <a href="https://www.truffleshufflesf.com/products/all-access-membership-monthly-box-delivery" class="btn-main-plus w-button">SET UP SUBSCRIPTION</a>
    </div>
    
  </div>


{%- endcomment -%}


</div> <!-- container-large -->

{%endif%}